no_typecheck:{"-ntc","--no-typecheck"}:[default="false"]

//TODO - must prevent identifier names containing dashes!

//Print would be better as a StringEnum
print:{"-p","--print"}:{enum}:[choices="txt,html,xhtml,dic",casesensitive="false"]
print_output:{"-po","--print-output"}:{file}:[canbedir="false"]
pretty_print:{"-pp","--pretty-print"}

help:{"-h","--help"}
hidden_help:{"-hh","--hidden-help"}

time:{"-t","--time"}
informal:{"-i","--informal"}
formal:{"-f","--formal"}
check_informal:{"-ci","--check-informal"}
check_formal:{"-cf","--check-formal"}
check_consistency:{"-cc","--check-consistency"}
no_check_consistency:{"-ncc","--no-check-consistency"}

debug:{"-d","--debug"}

//Currently can't have dash as an alias. Fix!
//readstdin:{"-"}

gen_class_dic:{"-gcd","--gen-class-dic"}
