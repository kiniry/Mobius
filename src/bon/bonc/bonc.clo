graph:{"-g","--graph"}:{enum}:[choices="icg,iig",casesensitive="false"]

//Old CLO library
//print_man
//print_readme
//print_bash_completion

version:{"-v","--version"}

SourceFiles:{}:{file-list}:[canbedir="false",mustexist="true"]


FORMAT::

  ( option* ) 
| ( version )
| ( help )
| ( hidden_help ) ;


WHERE::

option :     print 
          OR print_output 
          OR pretty_print 
          OR time 
          OR informal 
          OR formal 
          OR check_formal 
          OR check_consistency
          OR no_check_consistency
          OR debug
          OR gen_class_dic
          OR no_gen_class_dic
          OR graph
       ;

